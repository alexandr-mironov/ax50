+{
+	int err;
+
+	dev_dbg(&_dev->dev, "ltq_dwc2_vbus_deinit, gpio %d\n", gpio);
+
+	err = gpio_is_valid(gpio);
+	if (!err)
+	{
+		dev_dbg(&_dev->dev, "%s: gpio pin %d is invalid\n", __func__, gpio);
+		return -EINVAL;
+	}
+
+	gpio_free(gpio);
+
+	return 0;
+}
